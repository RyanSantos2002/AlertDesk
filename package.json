{
  "name": "alertdesk-receptor",
  "version": "1.0.0",
  "description": "AlertDesk Receptor - Recebe alertas internos",
  "author": "Ryan",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "play-sound": "^1.1.6",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^23.6.0"
  },
"build": {
    "appId": "com.alertdesk.receptor",
    "productName": "AlertDesk Receptor",
    "directories": {
      "output": "dist"
    },
    
    "asar": false,  

"files": [
      "main.js",
      "preload.js",
      "ui/**/*",
      "users_default.json",  
      "!config/*",           
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "ui/icon.ico",
      "requestedExecutionLevel": "asInvoker" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AlertDesk Receptor",
      "deleteAppDataOnUninstall": true
    }
  }
}